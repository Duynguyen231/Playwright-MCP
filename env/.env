# SauceDemo Application Configuration
SAUCE_BASE_URL=https://www.saucedemo.com

# Common password for all test users
SAUCE_PASSWORD=secret_sauce

# User Roles for Testing
# standard_user - Normal user with full functionality
SAUCE_STANDARD_USER=standard_user

# locked_out_user - Account locked due to too many login attempts
SAUCE_LOCKED_OUT_USER=locked_out_user

# problem_user - User experiencing UI/functional issues with product pages
SAUCE_PROBLEM_USER=problem_user

# performance_glitch_user - User experiencing significant performance delays
SAUCE_PERFORMANCE_GLITCH_USER=performance_glitch_user

# error_user - User experiencing error pages and message failures
SAUCE_ERROR_USER=error_user

# visual_user - User experiencing visual regression issues
SAUCE_VISUAL_USER=visual_user
